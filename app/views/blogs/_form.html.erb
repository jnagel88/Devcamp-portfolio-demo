<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Joe Nagel's Portoflio", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
  <%= form.label :title %>
  <%= form.text_field :title, id: :blog_title, class:"form-control" %>
</div>

  <div class="form-group">
    <%= form.label :topic_id %>
    <%= form.text_field :topic_id, id: :topic_id, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body, class:"form-control", rows: 15 %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Blog", class: "btn btn-primary" %>
  </div>
<% end %>
